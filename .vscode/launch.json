  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "port": 9298,
      "localRoot": "${workspaceFolder}/app",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/app/build/**/*.js"
      ],
      "preLaunchTask": "tsc-watch",
      "skipFiles": [
        "<node_internals>/**/*.js",
      ]
    }
  ]
}